<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/ColorSecondary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".FoodOrderingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="@drawable/background_food_ordering"
            android:elevation="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="start"
                android:elevation="15dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/ivfoodsType_booking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chicken_momo" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_profile_menu"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/ColorWhite"
                        android:paddingTop="10dp"

                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:layout_marginLeft="25dp"
                            android:gravity="center|left"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvFoodCategoryFoodOrderingActivity"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/nunito_extrabold"
                                android:gravity="left"
                                android:padding="2.5dp"
                                android:text="Breakfast"
                                android:textColor="@color/ColorPrimary"
                                android:textSize="20dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_marginRight="25dp"
                            android:gravity="center|right"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/ivFoodQuantiyMinusFoodOrderingActivity"
                                    android:layout_width="25dp"
                                    android:layout_height="60dp"
                                    android:layout_marginLeft="20dp"
                                    android:onClick="decrement"
                                    android:src="@drawable/minus_icon" />

                                <TextView
                                    android:id="@+id/tvFoodQuantiyFoodOrderingActivity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="20dp"
                                    android:fontFamily="@font/nunito_regular"
                                    android:gravity="center"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="25dp" />

                                <ImageView
                                    android:id="@+id/ivFoodQuantiyPlusFoodOrderingActivity"
                                    android:layout_width="30dp"
                                    android:layout_height="60dp"
                                    android:onClick="increment"
                                    android:layout_marginLeft="20dp"
                                    android:src="@drawable/plus_icon" />

                            </LinearLayout>


                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@drawable/border_profile_menu">

                    <TextView
                        android:id="@+id/tvFoodNameFoodOrderingActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/ColorWhite"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="left"
                        android:paddingLeft="25dp"
                        android:paddingTop="10dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="10dp"
                        android:text="Steamed Chicken"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    android:background="@drawable/border_profile_menu">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/ColorWhite"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="left"
                        android:paddingLeft="25dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Price: "
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/ColorWhite"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Rs "
                        android:textColor="@color/ColorPrimary"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvOriginalPriceFoodOrderingActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/ColorWhite"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="10dp"
                        android:text="000"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal"
                    android:background="@drawable/border_profile_menu">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/ColorWhite"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="left"
                        android:paddingLeft="25dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Total Amount: "
                        android:textColor="@color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/ColorWhite"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Rs "
                        android:textColor="@color/ColorPrimary"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tvTotalAmountFoodOrderingActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/ColorWhite"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="left"
                        android:paddingTop="10dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="10dp"
                        android:text="190"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:background="@drawable/border_profile_menu">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ColorWhite"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="left"
                    android:paddingLeft="25dp"
                    android:paddingTop="20dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="5dp"
                    android:text="Ingredients :"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvIngredientsFoodOrderingActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/ColorWhite"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="left"
                    android:paddingLeft="25dp"
                    android:paddingTop="5dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="20dp"
                    android:text="Potatoes, chilly powder, red sauce, coriender pepper, salt, mustard oil."
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ColorSecondary"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/ColorSecondary">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginLeft="25dp"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonAddToCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_rounded"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:shadowColor="@color/ColorSecondary"
                        android:shadowDx="0"
                        android:shadowDy="4"
                        android:shadowRadius="30"
                        android:text="ADD TO CART"
                        android:textColor="@color/white"
                        android:textSize="12dp"></Button>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginRight="25dp"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_rounded"
                        android:fontFamily="@font/nunito_extrabold"
                        android:gravity="center"
                        android:shadowColor="@color/ColorSecondary"
                        android:shadowDx="0"
                        android:shadowDy="4"
                        android:shadowRadius="30"
                        android:onClick="goToSelectPayement"
                        android:text="CHECK OUT"
                        android:textColor="@color/white"
                        android:textSize="12dp"></Button>


                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>


</ScrollView>

