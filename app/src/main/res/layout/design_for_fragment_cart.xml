<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingRight="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/shadow_background_1">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:elevation="15dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/ivFoodImageMyCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/chicken_momo" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFoodNameMyCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Chicken"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvFoodCategoryMyCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/nunito_extrabold"
                android:text="MoMo"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvFoodPriceMyCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Rs 180"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFoodQuantityMyCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="35dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/ivFoodQuantiyPlusMyCart"
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:src="@drawable/plus_icon" />

                <ImageView
                    android:id="@+id/ivFoodQuantiyMinusMyCart"
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:src="@drawable/minus_icon" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>


</LinearLayout>

